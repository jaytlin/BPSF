<div class="row">
  <div class="twelve columns">
    <div class="wrapper light">
      <div class="row">
        <h2>Update Your Profile</h2>
      </div>
      <div class="row">
        <div class="twelve columns">
          <%= form_for @user, url: user_path(id: @user.id) do |f| %>
            <div class="field">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: :input %>
            </div>
            <div class="field">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: :input %>
            </div>
            <div class="field">
              <%= f.label :email %>
              <%= f.text_field :email, class: :input %>
            </div>
            <%= fields_for @profile, url: admin_profile_path(id: @profile.id) do |ff| %>
              <div class="field">
                <%= ff.label :about, "About" %>
                <%= ff.text_field :about, class: [:textarea, :input], rows: 3 %>
              </div>
              <div class="field">
                <%= ff.label :position, "Position" %>
                <%= ff.text_field :position, class: [:textarea, :input], rows: 3 %>
              </div>
            <% end %>
            <div class="medium primary btn pull_right">
              <%= f.submit "Save!" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
