<div class="row">
  <div class="twelve columns">
    <div class="wrapper light">
      <div class="row">
        <h2>Update Your Profile</h2>
      </div>
      <div class="row">
        <div class="twelve columns">
          <%= form_for @user, url: user_path(id: @user.id) do |f| %>
            <div class="field">
              <%= f.label :first_name %>
              <%= f.text_field :first_name, class: :input %>
            </div>
            <div class="field">
              <%= f.label :last_name %>
              <%= f.text_field :last_name, class: :input %>
            </div>
            <div class="medium primary btn pull_right">
              <%= f.submit "Save!" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
